{% extends 'main/base.djhtml' %}

{% block title %}Tag search{% endblock %}
{% block header %}Tag search{% endblock %}
{% block buttons %}{% include 'main/search.djhtml' with slug="tag" %}{% endblock %}

{% block body %}

    <div class="list-group">
        {% if total_count > 0 %}
            {% for t in results %}
                {% include 'tags/tag-listitem.djhtml' with tag=t %}
            {% endfor %}
        {% else %}
            {% include 'tags/tag-listitem.djhtml' with none_found=True %}
        {% endif %}
    </div>

    {% include 'main/pagination.djhtml' with paged_object=results paging_url_component="tags" %}

    <script type="text/javascript">
     $('#search-btn').click(function() {
         window.location = "/tags/search/" + $('#search-query').val();
     });

     $("#search-query").keyup(function(event){
         if(event.keyCode == 13){
             $("#search-btn").click();
         }
     });
    </script>
{% endblock %}
